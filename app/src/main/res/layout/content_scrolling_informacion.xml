<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ScrollingInformacionJuego"
        tools:showIn="@layout/activity_scrolling_informacion_juego">

        <ImageView
            android:id="@+id/image_juego"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/txv_titulo_juego"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_TituloJuego"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/image_juego"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txv_anio_lanzamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_AnioLanzamiento"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/txv_titulo_juego"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txv_calificacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Calificacion"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/txv_anio_lanzamiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@id/txv_calificacion"
            app:layout_constraintStart_toStartOf="parent"
            android:isIndicator="true"
            android:progressTint="@android:color/holo_orange_light"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txv_disponible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Disponibilidad"
            android:padding="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layout_botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/txv_disponible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_reseniar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:text="@string/lbl_ReseÃ±ar" />

            <Button
                android:id="@+id/btn_ver_resenias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:text="@string/lbl_VerResenias" />

            <ImageView
                android:id="@+id/img_agregar_lista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_agregar_lista"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txv_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Descripcion"
            android:padding="8dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/layout_botones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>

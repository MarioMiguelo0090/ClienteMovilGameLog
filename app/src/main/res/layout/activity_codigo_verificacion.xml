<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CodigoVerificacion"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txv_CodigoVerificacion"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/bangers"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/edit_cuadro1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/edit_cuadro2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/edit_cuadro3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/edit_cuadro4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/edit_cuadro5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/edit_cuadro6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_Verificar"
            android:layout_marginTop="30dp"
            android:textSize="20sp"/>

    </LinearLayout>
</layout>